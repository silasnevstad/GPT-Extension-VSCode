{
  "name": "gpthelper",
  "displayName": "GPT",
  "description": "Use OpenAI, Anthropic, or Gemini models inside VS Code",
  "icon": "icon.png",
  "version": "1.2.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "publisher": "SilasNevstad",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gpthelper.askGPT",
    "onCommand:gpthelper.askGPTFile",
    "onCommand:gpthelper.setKey",
    "onCommand:gpthelper.manageApiKeys",
    "onCommand:gpthelper.changeProvider",
    "onCommand:gpthelper.changeModel",
    "onCommand:gpthelper.changeLimit",
    "onCommand:gpthelper.changeTemperature",
    "onCommand:gpthelper.changeTopP",
    "onCommand:gpthelper.changeContextMode",
    "onCommand:gpthelper.setContextLength",
    "onCommand:gpthelper.changeOutputMode",
    "onCommand:gpthelper.changeDebugMode",
    "onCommand:gpthelper.exportChatHistory",
    "onCommand:gpthelper.showChatHistory",
    "onCommand:gpthelper.clearChatHistory"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "GPT",
      "properties": {
        "gpthelper.provider": {
          "type": "string",
          "enum": [
            "openai",
            "anthropic",
            "gemini"
          ],
          "default": "openai",
          "description": "LLM provider used for requests. Default: openai."
        },
        "gpthelper.openai.model": {
          "type": "string",
          "default": "gpt-5.2",
          "description": "OpenAI model id (used when provider = openai)."
        },
        "gpthelper.anthropic.model": {
          "type": "string",
          "default": "claude-sonnet-4-5-20250929",
          "description": "Anthropic model id (used when provider = anthropic)."
        },
        "gpthelper.gemini.model": {
          "type": "string",
          "default": "gemini-2.5-flash",
          "description": "Gemini model id (used when provider = gemini)."
        },
        "gpthelper.maxOutputTokens": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "description": "Max output tokens (0 = provider/model default or known max)."
        },
        "gpthelper.projectInstruction.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Prefix Ask GPT requests with instructions from a .gpt-instruction file."
        },
        "gpthelper.projectInstruction.lookup": {
          "type": "string",
          "enum": [
            "workspaceRoot",
            "nearestParent"
          ],
          "default": "workspaceRoot",
          "description": "Where to look for .gpt-instruction. workspaceRoot reads only the workspace folder root; nearestParent selects the closest parent directory within the workspace folder."
        },
        "gpthelper.projectInstruction.maxBytes": {
          "type": "number",
          "default": 65536,
          "minimum": 1024,
          "maximum": 16777216,
          "description": "Maximum number of bytes included from .gpt-instruction. On local file workspaces, larger files are truncated with a warning. On remote or virtual workspaces, very large files may be ignored for safety."
        }
      }
    },
    "commands": [
      {
        "command": "gpthelper.askGPT",
        "title": "Ask GPT"
      },
      {
        "command": "gpthelper.askGPTFile",
        "title": "Ask GPT with File"
      },
      {
        "command": "gpthelper.setKey",
        "title": "GPT: Set API Key (Deprecated)"
      },
      {
        "command": "gpthelper.manageApiKeys",
        "title": "GPT: Manage API Keys"
      },
      {
        "command": "gpthelper.changeProvider",
        "title": "GPT: Change Provider"
      },
      {
        "command": "gpthelper.changeModel",
        "title": "GPT: Change Model"
      },
      {
        "command": "gpthelper.changeLimit",
        "title": "GPT: Change Token Limit"
      },
      {
        "command": "gpthelper.changeTemperature",
        "title": "GPT: Change Temperature"
      },
      {
        "command": "gpthelper.changeTopP",
        "title": "GPT: Change TopP"
      },
      {
        "command": "gpthelper.changeContextMode",
        "title": "GPT: Change Context Mode"
      },
      {
        "command": "gpthelper.setContextLength",
        "title": "GPT: Set Context Length"
      },
      {
        "command": "gpthelper.changeOutputMode",
        "title": "GPT: Change Output Mode"
      },
      {
        "command": "gpthelper.changeDebugMode",
        "title": "GPT: Change Debug Mode"
      },
      {
        "command": "gpthelper.showChatHistory",
        "title": "GPT: Show Chat History"
      },
      {
        "command": "gpthelper.exportChatHistory",
        "title": "GPT: Export Chat History"
      },
      {
        "command": "gpthelper.clearChatHistory",
        "title": "GPT: Clear Chat History"
      }
    ],
    "keybindings": [
      {
        "command": "gpthelper.askGPT",
        "key": "alt+shift+i",
        "mac": "alt+shift+i"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "gpthelper.setKey",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "gpthelper.askGPT",
          "group": "gptCommands",
          "when": "editorHasSelection"
        },
        {
          "command": "gpthelper.showChatHistory",
          "group": "gptCommands",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test:unit": "mocha \"test/unit/**/*.test.js\"",
    "test:smoke": "node ./test/runTest.js",
    "test": "npm run test:unit && npm run test:smoke",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./extension.js --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@vscode/test-electron": "^2.2.2",
    "esbuild": "^0.20.2",
    "eslint": "^9.4.0",
    "glob": "^8.1.0",
    "globals": "^15.4.0",
    "mocha": "^10.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^17.0.1",
    "typescript": "^5.4.5",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "axios": "^1.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/silasnevstad/GPT-Extension-VSCode"
  }
}
